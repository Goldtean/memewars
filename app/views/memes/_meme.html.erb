<%= form_for(@meme, mutipart: true) do |f| %>
  <% if @meme.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@meme.errors.count, "error") %> prohibited this meme from being saved:</h2>
      <ul>
      <% @meme.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field(:picture_id, value: @current_picture.id) %>
  <%= f.hidden_field(:user_id, value: current_user.id) %>
  
  <div class="field">
    <%= f.label :caption %>
    <%= f.text_field :caption %>
  </div>
  <div class="actions">
    <%= f.submit 'Submit Caption' %>
  </div>
<% end %>