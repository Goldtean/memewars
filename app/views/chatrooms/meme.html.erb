<br><br><br>
<div class="text-center">
  <%= image_tag @chatroom_picture.picture.url %>
</div>
<br>
<div class="text-center row col-xs-8 col-xs-offset-2">
    <%= render partial: 'memes/meme_form'%>
  
</div>

<div class="row col-xs-8 col-xs-offset-2">
  <h1><%= @chatroom.topic %></h1>
  <div class="panel panel-default">
    <% if @chatroom.messages.any? %>
      <div class="panel-body" id="messages">
        <%= render @chatroom.messages %>
      </div>
    <%else%>
      <div class="panel-body hidden" id="messages">
      </div>
    <%end%>
  </div>
  <% if current_user %>
    <%= render partial: 'messages/message_form', locals: {message: @message, chatroom: @chatroom}%>
  <% end %>
</div>